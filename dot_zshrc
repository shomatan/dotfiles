
# aliases
# -----------------------------------------------------------------------------
alias la='ls -la'
alias ll='ls -l'
alias l='ll'

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

alias mkdir='mkdir -p'

alias sudoi='sudo -i'

# global
alias -g L='| less'
alias -g G='| grep'


# Homebrew
# -----------------------------------------------------------------------------
if [[ -f "/opt/homebrew/bin/brew" ]]; then
    eval $(/opt/homebrew/bin/brew shellenv)
fi


# asdf
# -----------------------------------------------------------------------------
echo -e "\n. $(brew --prefix asdf)/libexec/asdf.sh" >> ${ZDOTDIR:-~}/.zshrc

. ~/.asdf/plugins/java/set-java-home.zsh